@import '../ability/ability';
.nav{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  background: #b50029;
}
.nav_main{
  width: 298rpx;
  height: 60rpx; 
  display: flex;
  overflow: hidden;
  justify-content: center;
  border-radius: 10rpx;
  border:1px solid #fff;
}
.nav_main .nav_list{
  width: 100rpx;
  height: 100%;
  float: left;
  text-align: center;
  line-height: 60rpx;
}
.nav_list.cur{
  color: #b50029;
  background: #fff;
}
.message_wrap, bar_wrap{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.search_wrap{
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  background: #fff;
}
.search_main{
  width: 98%;
  height: 60rpx;
  margin:20rpx auto;
  border-radius: 20rpx;
  background: #c8c8c8;
  display: flex;
  align-items: center;
}
.search_main icon{
  margin-left:10rpx;
}
.search_main input{
  height: 100%;
  color: #fff;
  line-height: 60rpx;
  font-size: 26rpx;
  flex:1;
  margin-left:10rpx;
  padding-left:10prx;
}
.nav_bar{
  width: 100%;
  height: 100rpx;
  font-size: 26rpx;
}
.nav_bar .bar_list{
  width: 33.33333%;
  height: 100%;
  display: flex;
  float:left;
  flex-direction: column;
  background: #ededed;
  align-items: center;
  justify-content: center;
  border-right: 1px solid #fff;
}
.nav_bar .bar_list image{
  width: 40rpx;
  height: 41rpx;
}
.bar_list.cur{
  background: #dbdbdb;
}