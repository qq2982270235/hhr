<view class="container">
  <view class="banner">
    <image src="/images/signin_banner.jpg" mode=""></image>
  </view>
  <view class="upload_header">
    <image src="/images/upload_header.png"></image>
  </view>
  <view class="list list_name">
    <text>姓名:</text>
    <input type="text" name="" value="" placeholder="请输入姓名" />
  </view>
  <view class="list list_idcard">
    <image src="/images/idcard_icon.png"></image>
    <text>身份证号码:</text>
    <input type="text" name="" value="" maxlength="18" placeholder="请输入身份证号码" />
  </view>
  <view class="list list_phone">
    <image src="/images/phone_icon.png"></image>
    <text>手机号:</text>
    <input type="text" name="" value="" maxlength="11" placeholder="请输入手机号" />
  </view>
  <view class="list list_yzm">
    <image src="/images/yzm_icon.png"></image>
    <text>验证码:</text>
    <input type="text" name="" value="" maxlength="6" placeholder="请输入验证码" />
    <button class="yzm_btn fs_13 fr">获取验证码</button>
  </view>
  <view class="list list_job">
    <image src="/images/job_icon.png"></image>
    <text>职位:</text>
    <input type="text" name="" value="" placeholder="请输入职位" />
  </view>
  <view class="argument fs_12">
    <label>
      <checkbox></checkbox>
      <text>我已经阅读并同意</text>
    </label>
    <navigator class="color_red" url="../argument/argument">《合伙人注册协议》</navigator>
  </view>
  <view class="list border_none">
    <button class="btn color_f" hover-class="none" bindtap="signInSubmitBtn">注册</button>
  </view>
</view>